<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>&nbsp;</th>
        <th>Name</th>
        <th>Total Tracks</th>
        <th>Rdio URL</th>
      </tr>
    </thead>
    <tbody>
      <% @search_results.each do |result| %>
        <tr>
          <td>
            <img src="<%= result["icon"] %>" height="40" width="40" />
          </td>
          <td>
            <a href="/details/<%= result["key"] %>"><%= result["name"] %></a>
            <% if result["artistKey"] %>
              by <a href="/artists/<%= result["artistKey"] %>"><%= result["artist"] %></a>
            <% end %>
          </td>
          <td>
            <a href="#"><%= result["length"] %></a>
          </td>
          <td>
            <a href="<%= result["shortUrl"] %>" target="lbrary-artist-short-url">
              View in Rdio <i class="fa fa-external-link"></i>
            </a>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>